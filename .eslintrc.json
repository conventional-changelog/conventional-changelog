{
  "root": true,
  "extends": [
    "@trigen/eslint-config",
    "@trigen/eslint-config/tsm",
    "@trigen/eslint-config/esm",
    "@trigen/eslint-config/jest"
  ],
  "env": {
    "node": true
  },
  "ignorePatterns": [
    "packages/*/dist/**/*",
    "packages/*/package/**/*",
    "packages/*/test/fixtures/**/*"
  ],
  "overrides": [
    {
      "files": ["index.js"],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}
